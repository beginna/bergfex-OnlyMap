{
  "name": "bergfex OnlyMap",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Show bergfex map in full screen.",
  "homepage_url": "https://github.com/beginna/bergfex-OnlyMap",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_title": "Show bergfex OnlyMap",
    "default_icon": "icons/icon.png"
  },
  "permissions": [
    "tabs",
    "*://www.bergfex.at/*",
    "*://www.bergfex.ch/*",
    "*://www.bergfex.de/*",
    "*://www.bergfex.it/*",
    "*://www.bergfex.fr/*",
    "*://www.bergfex.sk/*",
    "*://www.bergfex.pl/*",
    "*://www.bergfex.si/*",
    "*://www.bergfex.es/*",
    "*://www.bergfex.cz/*",
    "*://*.bergfex.com/*",
    "*://www.bergfex.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "bergfexOnlyMap@guerrillamail.org"
    }
  }
}